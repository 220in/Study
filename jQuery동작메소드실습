    <h1> jQuery 활용하기</h1>
    <!-- onclick 기능에 바로 jQuery 넣는 방법-->
    <!-- onclick="$('h1').css('color','red')"-->
    <button onclick="change()" >클릭!</button>
    
    
    <!-- 함수 써서 적용하는 방법-->
    <!-- <script>
    var change = ()=>{
      $('h1').css('color','red');
    }
    </script> -->

    <script>
    // 여러스타일 변경할 때 -- > 객체로 표현가능
    // 객체이므로 중괄호 안에 전부 표현한다.
    var change =() =>{
        $('h1').css({
            color : 'red',
            backgroundColor : 'black'
        })
    }


    </script>
